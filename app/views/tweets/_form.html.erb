<%= simple_form_for(@tweet, :html => { :class=>"form-horizontal"}) do |f| %>
	
	<% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
			Please review the problems below:
			<div class="cl"></div>
    </div>
  <% end %>
	
	<div class="form-inputs">
		<%= f.input :message, :hint => 'Maximum 160 characters', :required => true %>
		<%= f.input :private, :as => :boolean, :label => 'Private?', :required => false %>
	</div>
	
	<div class="form-actions" style="margin:0px; padding:10px 0px;">
		<%= f.submit "Tweet", :class=>"float-right btn btn-primary", "data-loading-text"=>"Updating ..." %>
		<%= link_to 'Back', user_tweets_path(:username=>current_user.username), :class=>"btn float-right margin-right-10" %>
	</div>
	
<% end %>
